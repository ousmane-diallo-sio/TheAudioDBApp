<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="36dp"
    android:backgroundTint="@color/platinum"
    app:cardCornerRadius="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivSearchCustomInput"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginStart="7dp"
            android:scaleType="fitCenter"
            android:src="@drawable/baseline_search_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/philippine_gray" />

        <EditText
            android:id="@+id/etCustomInput"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="7dp"
            android:background="@android:color/transparent"
            android:maxLines="1"
            android:inputType="text"
            style="@style/tvNormalTextStyle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/ivSearchCustomInput"
            app:layout_constraintRight_toLeftOf="@id/btnCancelCustomInput"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btnCancelCustomInput"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="15dp"
            android:scaleType="fitCenter"
            android:src="@drawable/baseline_cancel_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/philippine_gray" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>